<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="8dp"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:background="#424242"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="com.triplords.yajur.rajasthanhackathon.ActualMenu">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        card_view:cardElevation="4dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="2dp"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/ivEmotions"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="SENTIMENT RECOGNITION"
            android:textSize="20sp"
            android:textColor="#c3000000"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/ivObject"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#e9fdffb6"
            android:text="OBJECT RECOGNITION"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/ivText"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:text="TEXT RECOGNITION"
            android:textColor="#c3000000"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</LinearLayout>
